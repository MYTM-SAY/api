{
	"compilerOptions": {
		"types": ["node"],
		"lib": ["es2020", "dom"],
		"outDir": "dist",
		"sourceMap": true,
		"target": "esnext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"strict": true,
		"skipLibCheck": true
	},
	"paths": {
      "@/*": ["./src/*"]
    },
	"include": ["./*.js", "src/**/*.ts", "test/**/*.ts", "prisma/seed.mjs"]
}
